    "devDependencies": {
        "@biomejs/biome": "^2.1.4",
        "@types/bun": "latest"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@octokit/rest": "^22.0.0",
        "chalk": "^5.5.0",
        "commander": "^14.0.0",
        "execa": "^9.6.0"
    }
}
